<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pageBG"
        android:orientation="vertical">

        <!--内容部分-->
        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

        </LinearLayout>

        <!--线-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#CCCCCC" />

        <!--底部导航栏-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <!--首页-->
            <LinearLayout
                android:id="@+id/sy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tab_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/sy_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/home_no" />

                <TextView
                    android:id="@+id/sy_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="首页"
                    android:textColor="@color/homeTextColor_No"
                    android:textSize="12dp" />

            </LinearLayout>

            <!--发现-->
            <LinearLayout
                android:id="@+id/fx"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tab_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fx_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/find_no" />

                <TextView
                    android:id="@+id/fx_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="发现"
                    android:textColor="@color/homeTextColor_No"
                    android:textSize="12dp" />

            </LinearLayout>

            <!--我的-->
            <LinearLayout
                android:id="@+id/wd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tab_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/wd_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/me_no" />

                <TextView
                    android:id="@+id/wd_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="我的"
                    android:textColor="@color/homeTextColor_No"
                    android:textSize="12dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>
